{
  "openapi": "3.0.0",
  "info": {
    "title": "Subscriptions API",
    "description": "API para gerenciamento de assinaturas",
    "version": "1.0.0"
  },
  "paths": {
    "/api/subscriptions/trial": {
      "post": {
        "summary": "Iniciar trial de uma assinatura",
        "description": "Cria uma nova assinatura com período de trial para a empresa do usuário autenticado",
        "tags": ["Subscriptions"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateTrialRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Trial criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "$ref": "#/components/schemas/Subscription"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Validação falhou ou trial já foi usado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "Não autenticado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "409": {
            "description": "Empresa já possui assinatura ativa",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/subscriptions/current": {
      "get": {
        "summary": "Obter assinatura atual da empresa",
        "description": "Retorna a assinatura ativa ou em trial da empresa do usuário autenticado",
        "tags": ["Subscriptions"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Assinatura encontrada",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "$ref": "#/components/schemas/SubscriptionWithProduct"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Nenhuma assinatura ativa encontrada",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "Não autenticado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/subscriptions/{id}": {
      "get": {
        "summary": "Obter detalhes de uma assinatura",
        "tags": ["Subscriptions"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID da assinatura",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Assinatura encontrada",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "$ref": "#/components/schemas/SubscriptionWithProduct"
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Não autorizado a ver esta assinatura",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Assinatura não encontrada",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/subscriptions/{id}/cancel": {
      "patch": {
        "summary": "Cancelar uma assinatura",
        "description": "Cancela a assinatura da empresa. Acesso continua até o fim do período pago/trial.",
        "tags": ["Subscriptions"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID da assinatura",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CancelSubscriptionRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Assinatura cancelada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "$ref": "#/components/schemas/Subscription"
                    },
                    "message": {
                      "type": "string",
                      "example": "Assinatura cancelada. Acesso continua até 2025-10-31."
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Não autorizado (apenas admin/owner da empresa)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Assinatura não encontrada",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "409": {
            "description": "Assinatura já está cancelada",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/subscriptions/{id}/status": {
      "get": {
        "summary": "Obter status detalhado da assinatura",
        "description": "Retorna informações sobre status, trial, próximo pagamento, etc.",
        "tags": ["Subscriptions"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID da assinatura",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Status retornado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "$ref": "#/components/schemas/SubscriptionStatus"
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Não autorizado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Assinatura não encontrada",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "CreateTrialRequest": {
        "type": "object",
        "required": ["productId"],
        "properties": {
          "productId": {
            "type": "string",
            "format": "uuid",
            "description": "ID do produto/plano para assinar"
          }
        }
      },
      "CancelSubscriptionRequest": {
        "type": "object",
        "properties": {
          "reason": {
            "type": "string",
            "maxLength": 500,
            "description": "Motivo do cancelamento (opcional)"
          }
        }
      },
      "Subscription": {
        "type": "object",
        "required": [
          "id",
          "companyId",
          "productId",
          "status",
          "billingCycle",
          "priceAmount",
          "hasTrial",
          "isInTrial",
          "startDate",
          "paymentCount"
        ],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "companyId": {
            "type": "string",
            "format": "uuid"
          },
          "productId": {
            "type": "string",
            "format": "uuid"
          },
          "status": {
            "type": "string",
            "enum": ["trialing", "active", "past_due", "canceled", "suspended", "expired"],
            "example": "trialing"
          },
          "billingCycle": {
            "type": "string",
            "enum": ["weekly", "biweekly", "monthly", "quarterly", "semiannually", "yearly"],
            "example": "monthly"
          },
          "priceAmount": {
            "type": "integer",
            "minimum": 0,
            "description": "Valor em centavos",
            "example": 19900
          },
          "hasTrial": {
            "type": "boolean",
            "example": true
          },
          "trialDurationDays": {
            "type": "integer",
            "minimum": 0,
            "maximum": 90,
            "nullable": true,
            "example": 14
          },
          "trialStartDate": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "trialEndDate": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "isInTrial": {
            "type": "boolean",
            "example": true
          },
          "startDate": {
            "type": "string",
            "format": "date-time"
          },
          "nextDueDate": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "lastPaymentDate": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "canceledAt": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "cancellationReason": {
            "type": "string",
            "nullable": true
          },
          "paymentCount": {
            "type": "integer",
            "minimum": 0,
            "example": 0
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "SubscriptionWithProduct": {
        "allOf": [
          {
            "$ref": "#/components/schemas/Subscription"
          },
          {
            "type": "object",
            "properties": {
              "product": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "format": "uuid"
                  },
                  "name": {
                    "type": "string"
                  },
                  "features": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "maxSessions": {
                    "type": "integer"
                  },
                  "maxLeads": {
                    "type": "integer",
                    "nullable": true
                  }
                }
              }
            }
          }
        ]
      },
      "SubscriptionStatus": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": ["trialing", "active", "past_due", "canceled", "suspended", "expired"],
            "example": "trialing"
          },
          "statusLabel": {
            "type": "string",
            "example": "Trial Ativo"
          },
          "isInTrial": {
            "type": "boolean",
            "example": true
          },
          "daysRemainingInTrial": {
            "type": "integer",
            "minimum": 0,
            "nullable": true,
            "example": 12
          },
          "trialEndDate": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "nextPaymentDate": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "nextPaymentAmount": {
            "type": "integer",
            "nullable": true,
            "example": 19900
          },
          "canCancel": {
            "type": "boolean",
            "example": true
          },
          "accessEndsAt": {
            "type": "string",
            "format": "date-time",
            "description": "Quando o acesso terminará (relevante para cancelados)",
            "nullable": true
          }
        }
      },
      "Error": {
        "type": "object",
        "required": ["success", "error"],
        "properties": {
          "success": {
            "type": "boolean",
            "example": false
          },
          "error": {
            "type": "object",
            "properties": {
              "code": {
                "type": "string",
                "example": "SUBSCRIPTION_NOT_FOUND"
              },
              "message": {
                "type": "string",
                "example": "Assinatura não encontrada"
              },
              "details": {
                "type": "object",
                "nullable": true
              }
            }
          }
        }
      }
    }
  }
}
