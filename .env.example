# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/leadsrapido?schema=public"
DATABASE_URL_DIRECT="postgresql://username:password@localhost:5432/leadsrapido?schema=public"

# Connection Pool Configuration
DATABASE_POOL_SIZE=10
DATABASE_POOL_TIMEOUT=20
DATABASE_STATEMENT_TIMEOUT=30000
DATABASE_IDLE_TIMEOUT=60000
DATABASE_MAX_LIFETIME=3600000

# Application Configuration
APP_ENV="development"
APP_PORT=3000
APP_HOST="localhost"
APP_SECRET="your-secret-key-here-change-in-production"
JWT_SECRET="your-jwt-secret-here-change-in-production"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# Frontend Environment Variables
# ===============================

# API Configuration
VITE_API_BASE_URL=https://your-api-domain.com/api/v1

# Authentication Configuration
# Choose appropriate key names for your environment
VITE_AUTH_TOKEN_KEY=your_auth_token_key
VITE_REFRESH_TOKEN_KEY=your_refresh_token_key
VITE_DEVICE_ID_KEY=your_device_id_key

# Permissions & Session Configuration
# Adjust timeouts based on your security requirements
VITE_PERMISSIONS_CACHE_TTL=300000   # 5 minutes (development) / 600000 (production)
VITE_SESSION_REFRESH_INTERVAL=60000 # 1 minute (development) / 300000 (production)

# Security Configuration (production only)
VITE_SECURE_COOKIES=true
VITE_SAMESITE_COOKIES=strict

# Environment Indicator
VITE_ENVIRONMENT=development # development | staging | production
VITE_APP_VERSION=1.0.0

# Monitoring & Analytics (optional)
VITE_ENABLE_ANALYTICS=false # true in production
VITE_ENABLE_ERROR_TRACKING=false # true in production

# Performance Configuration (optional)
VITE_CACHE_TIMEOUT=1800000  # 30 minutes
VITE_MAX_RETRIES=3
VITE_REQUEST_TIMEOUT=15000  # 15 seconds

# Multi-tenant Configuration
DEFAULT_ORGANIZATION_QUOTA=1000
LEAD_ACCESS_COST=2.50
MAX_API_REQUESTS_PER_HOUR=10000

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR="./uploads"
ALLOWED_FILE_TYPES="csv,xlsx,json"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@leadsrapido.com"
FROM_NAME="LeadsRapido"

# External APIs
OPENAI_API_KEY="your-openai-api-key"
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
LINKEDIN_API_KEY="your-linkedin-api-key"
CRUNCHBASE_API_KEY="your-crunchbase-api-key"

# Monitoring and Analytics
SENTRY_DSN="your-sentry-dsn"
DATADOG_API_KEY="your-datadog-api-key"
NEW_RELIC_LICENSE_KEY="your-newrelic-license-key"

# Webhook Configuration
WEBHOOK_SECRET="your-webhook-secret"
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRY_ATTEMPTS=3

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET="your-session-secret"
CORS_ORIGIN="http://localhost:3000"
HELMET_ENABLED=true

# Payment Configuration (Stripe)
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"


# Data Processing
LEAD_ENRICHMENT_ENABLED=true
DUPLICATE_DETECTION_ENABLED=true
AUTO_QUALITY_SCORING=true
DATA_RETENTION_DAYS=2555  # 7 years

# Geographic Services
ENABLE_GEOCODING=true
GEOCODING_PROVIDER="google"
DISTANCE_SEARCH_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE="s3"
AWS_S3_BUCKET="leadsrapido-backups"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"

# Supabase Configuration (Frontend)
# Para monitoramento de workers em tempo real
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# API Configuration
VITE_API_BASE_URL=http://localhost:3000